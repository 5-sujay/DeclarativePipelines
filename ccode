  
pipeline {
    agent {label "Agent C"}
    stages {
       stage('gitinit') {
            steps {
                sh '''
                 
                if [ ! -f .git ] && [ ! -d devtest ]
                then
                git init
                git clone https://github.com/deesnest/devtest
                fi
                  
                 '''
             }
        }
        stage('build1') {
            steps {
            sh '''
                #git pull https://github.com/deesnest/devtest
                cd devtest
                pwd
                gcc -c main.c fact.c palin.c rev.c sum.c
                gcc -o ABC.exe main.o fact.o palin.o rev.o sum.o
                if [ ! -d cbuild ]
                then
                mkdir cbuild
                else
                path=$PWD
                cp $path/ABC.exe $path/cbuild
                echo "C project Build Successful"
                echo $PWD
                fi
                 '''
               
              }
        }
        stage('buildimage') {
            steps {
            sh '''
                     sudo docker pull ubuntu
  
                sudo docker run -it -v /home/ubuntu/workspace/cprojectnew/devtest/ABC.exe:/home/ubuntu/cbuild ubuntu:latest
                 '''
               
              }
        }
    }
}
